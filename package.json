{
  "name": "bmrg-worker-cicd",
  "version": "5.0.0",
  "description": "Boomerang CICD Worker",
  "main": "cli.js",
  "repository": "git@github.ibm.com:Boomerang/boomerang.worker.cicd.git",
  "author": "Tyson Lawrie <twlawrie@us.ibm.com>",
  "license": "MIT",
  "dependencies": {
    "@boomerang-worker/cli": "^0.1.2",
    "@boomerang-worker/core": "^0.1.0",
    "shelljs": "^0.8.3"
  },
  "scripts": {
    "node:cli": "cross-env NODE_ENV=local DEBUG=true node cli",
    "node:cli:nodebug": "cross-env NODE_ENV=local node cli",
    "test": "cross-env NODE_ENV=test mocha tests/**/*.spec.js",
    "test:watch": "nodemon --exec npm test",
    "start": "@boomerang-worker/cli"
  },
  "preferGlobal": true,
  "devDependencies": {
    "chai": "^4.2.0",
    "cross-env": "^5.2.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "prettier": "^1.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --print-width 300 --write",
      "git add"
    ]
  }
}
